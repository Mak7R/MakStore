@model ProductViewModel

@{
    ViewBag.Title = $"Product {Model.Name}";
}

<div class="container">
    <h2>Product @Model.Name</h2>

    <p>@Model.Id</p>
    <p> @Model.Description</p>
    <p>@Model.Price</p>
    
    <div class="row row-cols-4">
        <a class="btn btn-success m-2" asp-controller="Products" asp-action="Update" asp-route-productId="@Model.Id">Update</a>
        <form class="d-block m-2" asp-controller="Products" asp-action="Delete" asp-route-productId="@Model.Id" method="post">
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </div>
</div>
